<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".AddProjectActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/linear1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/project_name"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/editProject"
                        android:hint="@string/project_name"
                        android:gravity="center"
                        android:textColorHint="@color/white"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/route"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/textRoute"
                        android:text="@string/route"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear3"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/investor"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/textInvestor"
                        android:text="@string/investor"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear4"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/location"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/textLocation"
                        android:text="@string/location"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear5"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/Area"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/editArea"
                        android:hint="@string/Area"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:textColorHint="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear6"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/price"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/editPrice"
                        android:hint="@string/price"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:inputType="numberDecimal"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:textColorHint="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear7"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/RentValue"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/editRentValue"
                        android:hint="@string/RentValue"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:textColorHint="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear8"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/RentType"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/textRentType"
                        android:textAlignment="center"
                        android:text="@string/rentrate"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"

                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear9"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/start_date"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/textStartDate"
                        android:hint="@string/start_date"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear10"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/end_date"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/textEndDate"
                        android:hint="@string/end_date"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"

                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear11"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/period"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/editPeriod"
                        android:hint="@string/period"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:textColorHint="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear12"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear11"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/annual_raise"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/editAnnualRaise"
                        android:hint="@string/annual_raise"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColorHint="@color/white"
                        android:inputType="number"
                        android:background="@color/colorPlaceholder"
                        android:layout_width="0dp"
                        android:layout_weight="1.98"
                        android:layout_height="match_parent"/>
                <TextView
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear13"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/linear12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                <TextView
                        android:text="@string/notes"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/editNotes"
                        android:hint="@string/notes"
                        android:gravity="center"
                        android:minLines="3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPlaceholder"
                        android:textColorHint="@color/white"
                        android:lines="2"
                        android:maxLength="150"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/Add"
            android:textColor="@color/white"
            android:textStyle="bold"
            style="@style/ButtonStyle"
            android:id="@+id/button"
            android:background="@drawable/button_bg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
